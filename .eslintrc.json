{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"airbnb-base"
	],
	"plugins": [
		"@typescript-eslint",
		"import"
	],
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"comma-dangle": ["error", "never"],
		"import/no-unresolved": "off",
		"import/prefer-default-export": "off",
		"import/extensions": ["error", "never"],
		"no-console": "off"
	},
	"settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
		},
		"typescript": {}
	}
}
